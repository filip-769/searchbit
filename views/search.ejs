<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./search.css">
    <link rel="stylesheet" href="./global.css">
    <link rel="search" type="application/opensearchdescription+xml" title="Searchbit" href="/opensearch.xml?ac=<%= config.autocomplete %>">
    <title><% if(req.query.q) { %>Search results for <%= req.query.q %><% } else { %> Searchbit <% } %></title>
</head>
<body>
    <header>
        <form method="get">
            <div id="top">
                <h1 id="title"><a href="/search">Searchbit</a></h1>
                <a href="/settings" id="settingsTab">Settings</a>
            </div>
            <div id="searchBar">
                <input type="search" name="q" value="<%= req.query.q %>" autofocus>
                <button type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke="#fff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <circle cx="10" cy="10" r="7" />
                        <line x1="21" y1="21" x2="15" y2="15" />
                    </svg>
                </button>
             </div>
             <nav>
                <select name="l" oninput="document.querySelector('form').submit()">
                    <option value="">None</option>
                    <% 
                        for(const lense in config.lenses) {
                            %>
                                <option value="<%= lense %>" <%= req.query.l === lense ? "selected" : "" %>><%= `${lense[0].toUpperCase()}${lense.slice(1)}`.replaceAll("_", " ") %></option>
                            <%
                        }
                    %>
                </select>
                <ul>
                    <li <%- req.query.t !== "image" ? "data-current" : "" %>><button type="submit" name="t" value="web">Web</button></li>
                    <li <%- req.query.t === "image" ? "data-current" : "" %>><button type="submit" name="t" value="image">Image</button></li>
                </ul>
             </nav>
        </form>
    </header>
    <main>
        <%- 
            req.query.q ? 
                req.query.t === "image" ?
                    include("imageSearch.ejs", { json }) :
                    include("webSearch.ejs", { json })
                :
                ""
        %>
    </main>
    <footer>
        <% if (req.query.q) { %>
            <div>
                <a class="paginationButton" href="/search?q=<%= encodeURIComponent(req.query.q) %>&t=<%= req.query.t??"web" %>&p=<%= (+req.query.p||1) === 1 ? 1 : (+req.query.p||1) - 1 %>">← Previous</a>
                <span class="paginationPageText">PAGE <%= (req.query.p||1) %></span>
                <a class="paginationButton" href="/search?q=<%= encodeURIComponent(req.query.q) %>&t=<%= req.query.t??"web" %>&p=<%= (+req.query.p||1) + 1 %>">Next →</a>
            </div>
        <% } %>
    </footer>
</body>
</html>