<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./global.css">
    <link rel="stylesheet" href="./search.css">
    <link rel="search" type="application/opensearchdescription+xml" title="Searchbit" href="/opensearch.xml?ac=<%= config.autocomplete %>">
    <title><% if(typeof json !== "undefined" && json.q) { %>Search results for <%= json.q %><% } else { %> Searchbit <% } %></title>
    <%- config.customHTML || "" %> 
</head>
<body>
    <header>
        <form method="get">
            <div id="top">
                <h1 id="title"><a href="/search">Searchbit</a></h1>
                <a href="/settings" id="settingsTab">Settings</a>
            </div>
            <div id="searchBar">
                <input type="search" name="q" value="<%= typeof json !== "undefined" ? json.q : "" %>" autofocus>
                <%
                    for (const param in req.query) {
                        if(param !== "q" && param !== "p") {
                            %>
                                <input type="hidden" name="<%= param %>" value="<%= req.query[param] %>">
                            <%
                        }
                    }
                %>
                <button type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke="#fff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <circle cx="10" cy="10" r="7" />
                        <line x1="21" y1="21" x2="15" y2="15" />
                    </svg>
                </button>
             </div>
             <nav>
                <ul>
                    <li <%- req.query.t !== "image" ? "data-current" : "" %>><button type="submit" name="t" value="web" accesskey="w">Web</button></li>
                    <li <%- req.query.t === "image" ? "data-current" : "" %>><button type="submit" name="t" value="image" accesskey="i">Image</button></li>
                </ul>
             </nav>
        </form>
    </header>
    <main>
        <%- 
            req.query.q ? 
                req.query.t === "image" ?
                    include("imageSearch.ejs", { json }) :
                    include("webSearch.ejs", { json })
                :
                ""
        %>
    </main>
    <footer>
        <% if (req.query.q) { %>
            <form method="get">
                <%
                    for (const param in req.query) {
                        if(param !== "p") {
                            %>
                                <input type="hidden" name="<%= param %>" value="<%= req.query[param] %>">
                            <%
                        }
                    }
                %>
                <button class="paginationButton" type="submit" name="p" value="<%= (+req.query.p||1) === 1 ? 1 : (+req.query.p||1) - 1 %>" <%= req.query.p > 1 ? "" : "disabled" %>>← Previous</button>
                <span class="paginationPageText">PAGE <%= (req.query.p||1) %></span>
                <button class="paginationButton" type="submit" name="p" value="<%= (+req.query.p||1) + 1 %>">Next →</button>
            </form>
        <% } %>
    </footer>
</body>
</html>